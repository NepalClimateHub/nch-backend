{
  "name": "nepal-climate-hub",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "kysely": "kysely",
    "db:gen": "kysely-codegen --out-file ./src/db/db.d.ts",
    "db:status": "kysely migrate:list",
    "db:make": "kysely migrate:make",
    "db:latest": "kysely migrate:latest",
    "db:up": "kysely migrate:up",
    "db:down": "kysely migrate:down",
    "db:drop": "tsx ./src/scripts/drop_database.ts",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.18.4",
    "@scalar/hono-api-reference": "^0.5.172",
    "dotenv": "^16.4.7",
    "hono": "^4.6.20",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.10.1",
    "lefthook": "^1.10.10",
    "tsx": "^4.7.1"
  }
}